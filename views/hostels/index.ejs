
<% layout('layouts/boilerplate') %>

<div id="map" style="width: 100%; height: 500px;"></div>

<h2 class="mt-5">All Hostels</h2>
 
        <% for (let hostel of allHostels) { %>
            <div class="card mb-3">
                <div class="row no-gutters">
                    <div class="col-md-4">
                        <% if (!hostel.images || hostel.images.length === 0) { %>
                            <img src="https://images.unsplash.com/photo-1596431749951-1bbb4e396436?q=80&w=1974&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="Default hostel image" class="img-fluid">
                        <% } else { %>
                            <img src="<%= hostel.images[0].url %>" alt="<%= hostel.title %>" class="img-fluid">
                        <% } %>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><%= hostel.title %></h5>
                            <p class="card-text"><%= hostel.description %></p>
                            <p class="card-text text-muted"><%= hostel.location %></p>
                            <a href="/hostels/<%= hostel._id %>" class="btn btn-primary">View Venue</a>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>

            
          
<script>
    const maptilerApiKey = '<%- process.env.MAPTILER_API_KEY %>';
    const allHostels = { features: <%- JSON.stringify(allHostels) %>};
</script>




<script src="/javascripts/clusterMap.js" crossorigin="anonymous"></script>



